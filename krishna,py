import json
import os

DATA_FILE = 'students.json'

def load_data():
    if not os.path.exists(DATA_FILE):
        return []
    with open(DATA_FILE, 'r') as file:
        return json.load(file)

def save_data(data):
    with open(DATA_FILE, 'w') as file:
        json.dump(data, file, indent=4)

def add_student(students):
    student = {
        'id': input("Enter Student ID: "),
        'name': input("Enter Name: "),
        'age': input("Enter Age: "),
        'class': input("Enter Class: "),
        'email': input("Enter Email: ")
    }
    students.append(student)
    save_data(students)
    print("âœ… Student added successfully.\n")

def view_students(students):
    if not students:
        print("âŒ No students found.")
        return
    print("\nğŸ“‹ All Students:")
    for student in students:
        print(f"ID: {student['id']} | Name: {student['name']} | Age: {student['age']} | Class: {student['class']} | Email: {student['email']}")
    print()

def search_student(students):
    sid = input("Enter Student ID to search: ")
    for student in students:
        if student['id'] == sid:
            print(f"\nâœ… Student Found: {student}")
            return
    print("âŒ Student not found.\n")

def update_student(students):
    sid = input("Enter Student ID to update: ")
    for student in students:
        if student['id'] == sid:
            student['name'] = input("Enter new name: ")
            student['age'] = input("Enter new age: ")
            student['class'] = input("Enter new class: ")
            student['email'] = input("Enter new email: ")
            save_data(students)
            print("âœ… Student updated successfully.\n")
            return
    print("âŒ Student not found.\n")

def delete_student(students):
    sid = input("Enter Student ID to delete: ")
    for i, student in enumerate(students):
        if student['id'] == sid:
            del students[i]
            save_data(students)
            print("âœ… Student deleted successfully.\n")
            return
    print("âŒ Student not found.\n")

def menu():
    students = load_data()
    while True:
        print("ğŸ“ Student Management System")
        print("1. Add Student")
        print("2. View All Students")
        print("3. Search Student by ID")
        print("4. Update Student Info")
        print("5. Delete Student")
        print("6. Exit")
        choice = input("Enter choice (1-6): ")

        if choice == '1':
            add_student(students)
        elif choice == '2':
            view_students(students)
        elif choice == '3':
            search_student(students)
        elif choice == '4':
            update_student(students)
        elif choice == '5':
            delete_student(students)
        elif choice == '6':
            print("ğŸ‘‹ Exiting... Goodbye!")
            break
        else:
            print("âš ï¸ Invalid choice. Try again.\n")

if __name__ == "__main__":
    menu()
